{
    "productName": "Handbook Finder",
    "version": "1.0.0",
    "identifier": "com.elaxan.handbookfinder",
    "build": {
        "beforeDevCommand": "yarn dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "yarn build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Handbook Finder",
                "fullscreen": false,
                "center": true,
                "width": 800,
                "height": 600,
                "resizable": true,
                "minHeight": 600,
                "minWidth": 800
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "msi",
        "resources": [
            "resources/*"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}